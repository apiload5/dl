# PHP Configuration
option_settings:
  aws:elasticbeanstalk:container:php:phpini:
    memory_limit: 512M
    max_execution_time: 300
    max_input_time: 300
    post_max_size: 100M
    upload_max_filesize: 100M
    
  aws:elasticbeanstalk:environment:
    EnvironmentType: SingleInstance
    
  aws:autoscaling:launchconfiguration:
    InstanceType: t3.medium
    
files:
  "/etc/php.d/99-custom.ini":
    mode: "000644"
    owner: root
    group: root
    content: |
      ; Custom PHP settings for SaveMedia
      memory_limit = 512M
      max_execution_time = 300
      max_input_time = 300
      post_max_size = 100M
      upload_max_filesize = 100M
      allow_url_fopen = On
      enable_dl = Off
      expose_php = Off
